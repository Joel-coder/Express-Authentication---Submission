    <div class="container">
      <div class="row"></div>
      <div class="offser-md-3 col-md-6"></div>
      <h1>
        <%= title %>
      </h1>
      <form class="form" method="post">
        <div class="form-group">
          <label for="nameTextField"></label>
          <input type="text" class="form-control" id="nameTextField" placeholder="Entern the Name" name="contact_name"
            value="<%= contactInfo.contact_name%>" required />
        </div>
        <div class="form-group">
          <label for="phoneTextField"></label>
          <input type="text" class="form-control" id="phoneTextField" placeholder="Entern the phone"
            name="contact_number" value="<%= contactInfo.contact_number %>" required />
        </div>
        <div class="form-group">
          <label for="emailTextField"></label>
          <input type="text" class="form-control" id="emailTextField" placeholder="Entern the Email" name="email"
            value="<%= contactInfo.email %>" required />
        </div>

        <button href="" class="btn btn-primary" type="submit"><i class="bi bi-plus"></i> submit</button>
        <a href="/contactInfo" class="btn btn-warning"> <i class="bi bi-dash"></i>cancel</a>
      </form>
    </div>

