<%- include ../partials/header.ejs %>

    <%- include ../partials/main_nav.ejs %>


        <!-- Main Content -->
        <main class="container">
            <div class="d-flex flex-column align-items-center mt-5 ">
                <table class="table table-bordered table-striped table-hover">
                    <tr>
                        <th class="text-center ">Name</th>
                        <th class="text-center">Number</th>
                        <th class="text-center">Email</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                    </tr>
                    <% for(let count=0; count < businessContactsList.length; count++) {%>
                        <tr>
                            <td class="text-center">
                                <%=businessContactsList[count].contact_name %>
                            </td>
                            <td class="text-center">
                                <%=businessContactsList[count].contact_number %>
                            </td>
                            <td class="text-center">
                                <%=businessContactsList[count].email %>
                            </td>
                            <td class="text-center"><a href="/contactInfo/edit/<%= businessContactsList[count]._id %>"
                                    class="btn btn-primary"><i class="bi bi-pen"></i> Edit</a></td>
                            <td class="text-center"><a href="/contactInfo/delete/<%= businessContactsList[count]._id %>"
                                    class="btn btn-primary"><i class="bi bi-dash"></i>Delete</a></td>
                        </tr>
                        <%}%>
                </table>

                <a href="/contactInfo/add" class="btn btn-primary"><i class="bi bi-plus"></i> Add contact info</a>
            </div>
        </main>
        <%- include ../partials/bottom_nav.ejs %>

            <%- include ../partials/footer.ejs %>